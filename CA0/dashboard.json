{
  "dashboard": {
    "id": null,
    "title": "Conveyor Line Speed Monitoring",
    "tags": ["conveyor", "iot", "manufacturing"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Real-time Conveyor Speed",
        "type": "timeseries",
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"conveyor_data\")\n  |> range(start: -5m)\n  |> filter(fn: (r) => r._measurement == \"conveyor_speed\")\n  |> filter(fn: (r) => r._field == \"speed_ms\")\n  |> aggregateWindow(every: 1s, fn: mean, createEmpty: false)",
            "datasource": {
              "type": "influxdb",
              "uid": "ceyhg0ucowpa8e"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 0.3,
            "displayName": "Speed (m/s)",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.2},
                {"color": "red", "value": 0.28}
              ]
            }
          }
        },
        "options": {
          "legend": {"displayMode": "visible"},
          "tooltip": {"mode": "single"}
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Rolling Average Speed",
        "type": "timeseries",
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"conveyor_data\")\n  |> range(start: -5m)\n  |> filter(fn: (r) => r._measurement == \"conveyor_speed\")\n  |> filter(fn: (r) => r._field == \"rolling_avg\")\n  |> aggregateWindow(every: 1s, fn: mean, createEmpty: false)",
            "datasource": {
              "type": "influxdb",
              "uid": "ceyhg0ucowpa8e"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "displayName": "Avg Speed (m/s)",
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Conveyor State",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"conveyor_data\")\n  |> range(start: -30s)\n  |> filter(fn: (r) => r._measurement == \"conveyor_speed\")\n  |> filter(fn: (r) => r._field == \"speed_ms\")\n  |> last()\n  |> map(fn: (r) => ({r with _value: r.state}))",
            "datasource": {
              "type": "influxdb",
              "uid": "ceyhg0ucowpa8e"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "displayName": "Current State",
            "mappings": [
              {"options": {"running": {"color": "green", "text": "RUNNING"}},
               "stopped": {"color": "red", "text": "STOPPED"},
               "starting": {"color": "yellow", "text": "STARTING"},
               "stopping": {"color": "orange", "text": "STOPPING"},
               "maintenance": {"color": "purple", "text": "MAINTENANCE"}}
            ]
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Current Speed",
        "type": "gauge",
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"conveyor_data\")\n  |> range(start: -30s)\n  |> filter(fn: (r) => r._measurement == \"conveyor_speed\")\n  |> filter(fn: (r) => r._field == \"speed_ms\")\n  |> last()",
            "datasource": {
              "type": "influxdb",
              "uid": "ceyhg0ucowpa8e"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 0.3,
            "displayName": "m/s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.2},
                {"color": "red", "value": 0.28}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8}
      },
      {
        "id": 5,
        "title": "Anomaly Count",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"conveyor_data\")\n  |> range(start: -1h)\n  |> filter(fn: (r) => r._measurement == \"conveyor_speed\")\n  |> filter(fn: (r) => r._field == \"anomaly_count\")\n  |> filter(fn: (r) => r._value > 0)\n  |> count()",
            "datasource": {
              "type": "influxdb",
              "uid": "ceyhg0ucowpa8e"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "displayName": "Anomalies (1h)",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Speed Distribution",
        "type": "histogram",
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"conveyor_data\")\n  |> range(start: -1h)\n  |> filter(fn: (r) => r._measurement == \"conveyor_speed\")\n  |> filter(fn: (r) => r._field == \"speed_ms\")",
            "datasource": {
              "type": "influxdb",
              "uid": "ceyhg0ucowpa8e"
            }
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8}
      },
      {
        "id": 7,
        "title": "Line 1 Status",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"conveyor_data\")\n  |> range(start: -30s)\n  |> filter(fn: (r) => r._measurement == \"conveyor_speed\")\n  |> filter(fn: (r) => r._field == \"speed_ms\")\n  |> last()\n  |> map(fn: (r) => ({_time: r._time, _value: r.state, _field: \"state\"}))",
            "datasource": {
              "type": "influxdb",
              "uid": "ceyhg0ucowpa8e"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "displayName": "Line 1 Status",
            "mappings": [
              {
                "options": {
                  "running": {"color": "green", "text": "RUNNING"},
                  "stopped": {"color": "red", "text": "STOPPED"},
                  "starting": {"color": "yellow", "text": "STARTING"},
                  "stopping": {"color": "orange", "text": "STOPPING"},
                  "maintenance": {"color": "purple", "text": "MAINTENANCE"}
                },
                "type": "value"
              }
            ],
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "transparent", "value": null}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value"
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 12}
      }
    ],
    "time": {
      "from": "now-5m",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 38,
    "version": 1
  },
  "folderId": 0,
  "overwrite": true
}